
extends header

block content
    #app
        .layout-body
            .banner
                p.disclaimer SFSU Software Engineering Project CSC 648-848 | Fall 2019 | For Demonstration Only
                .banner__content
                    .banner__content--div
                        img(class="banner__content--icon" src="images/icons/buy-icon.png")
                        p.banner__content--desc Buy
                    .banner__content--div.center
                        img(class="banner__content--icon" src="images/icons/sell-icon.png")
                        p.banner__content--desc Sell
                    .banner__content--div
                        img(class="banner__content--icon" src="images/icons/communicate-icon.png")
                        p.banner__content--desc Communicate

        .layout-body
            h2.slider__title Recent Posts
            .slider
                div(class="slider__post post__shadow" v-for="post in posts" v-on:click="contactSeller(post.ID)")
                    div(class="slider__post--img" v-bind:style="{ backgroundImage: 'url(' + post.image_name + ')' }")
                    .slider__post--body
                        h3.slider__post--title {{trimTitle(post.Name)}}
                        p {{post.Category}}
                        p.slider__post--comment {{trimComment(post.Comment)}}
                    p.slider__post--price ${{post.Price}}
                    //-if you want the contact seller button again, uncomment this 
                    //- .slider__post--button(v-on:click="contactSeller(post.ID)") Contact Seller

        .layout-body
            h2 Popular Categories
            .pop__category-container
                .pop__category Electronics
                .pop__category Textbooks
                .pop__category Furniture
                .pop__category Movies
                .pop__category Video Games
                .pop__category Supplies

        .layout-body
            h2.slider__title Popular Posts
            .slider
                div(class="slider__post post__shadow" v-for="post in posts")
                    div(class="slider__post--img" v-bind:style="{ backgroundImage: 'url(' + post.image_name + ')' }")
                    .slider__post--body
                        h3.slider__post--title {{ trimTitle(post.Name) }}
                        p {{post.Category}}
                        p.slider__post--comment {{ trimComment(post.Comment) }}
                    p.slider__post--price ${{post.Price}}
                    //- .slider__post--button Contact Seller

        .layout-footer

    script(src="https://cdn.jsdelivr.net/npm/vue@2.x/dist/vue.js")
    script(src="https://unpkg.com/axios/dist/axios.min.js")
    script(src="javascripts/vue/index.js")