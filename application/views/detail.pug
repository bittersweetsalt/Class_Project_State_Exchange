extends header

block content
    #app
        .layout-body
            h1 {{post.name}}
            img(class="card-img-top img-fluid" v-bind:src="'/' + post.image" alt="")
            h3.card-title Category: {{post.categroy}}
            h2.card-title {{post.price}} $
            p.card-text {{post.comment}}

