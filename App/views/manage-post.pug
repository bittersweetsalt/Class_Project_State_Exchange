        .layout-body
            h2 Manage Posts
            table.table
                tr(v-for="post in posts")
                    td {{post.ID}}
                    td {{post.Name}}
                    td {{post.Category}}
                    td {{post.Price}}
                    td.buttons
                        button Approve
                        button Disapprove

